{
    "name": "ujem/app",
    "description": "Application UJEM",
    "type": "project",
    "require": {
        "php": "^7.4|^8.0",
        "cboden/ratchet": "^0.4.4",
        "react/zmq": "^0.5.0",
        "ext-zmq": "*",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-pdo_pgsql": "*",
        "ext-pgsql": "*"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "platform": {
            "php": "7.4.0"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-install-cmd": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
            "@php artisan key:generate --ansi"
        ]
    }
}